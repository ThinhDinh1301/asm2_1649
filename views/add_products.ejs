<%- include('layout/header')  %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Add New Product</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <lable for="id">Product ID</lable>
                            <input type="text" name="id" class="form-control form-control-lg" placeholder="Enter ID" required/>
                        </div>
                        <div class="mb-3">
                            <lable for="name">Product Name</lable>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Name" required/>
                        </div>
                        <div class="mb-3">
                            <lable for="price">Product Price</lable>
                            <input type="text" name="price" class="form-control form-control-lg" placeholder="Enter Price" required/>
                        </div>
                        <div class="mb-3">
                            <lable for="image" class="form-lable">Select Image</lable>
                            <input class="form-control form-control-lg" type="file" name="image" required/>
                        </div>
                        <div class="mb-3">
                            <lable for="price">Product Detail</lable>
                            <input type="text" name="detail" class="form-control form-control-lg" placeholder="Enter Detail" required/>
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Add Product" class="btn btn-success btn-lg"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer')  %>